{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "#components": ["./src/components"],
      "#components/*": ["./src/components/*"],
      "#screens/*": ["./src/screens/*"],
    },
    "strict": true
  },
}
