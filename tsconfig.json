{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "#components": ["./src/components"],
      "#components/*": ["./src/components/*"],
      "#contexts/*": ["./src/contexts/*"],
      "#helpers/*": ["./src/helpers/*"],
      "#screens/*": ["./src/screens/*"],
    },
    "strict": true
  },
}
